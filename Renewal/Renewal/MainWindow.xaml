
<Window x:Class="Renewal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="1080" Width="240"
        Topmost="True" HorizontalAlignment="Right" HorizontalContentAlignment="Right" VerticalAlignment="Top">

    <WrapPanel x:Name="wrapPanel" Focusable="False" FocusManager.IsFocusScope="False">
        <Button x:Name="Mouse" Content="Mouse" Width="240" Height="180" Click="Mouse_Click" Focusable="False" FocusManager.IsFocusScope="False" />
        <Button x:Name="Keyboard" Content="Keyboard" Width="240" Height="180" Click="Keyboard_Click" Focusable="False" FocusManager.IsFocusScope="False" />
        <Button x:Name="Setting" Content="Setting" Width="240" Height= "180" Click="Setting_Click" Focusable="False" FocusManager.IsFocusScope="False" />
    </WrapPanel>
   
   
</Window>

